@{
    Layout = "~/Views/Shared/_AdminBearlingoLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biểu Đồ Số Bài Làm Theo Ngày</title>
    
    <style>
        /* CSS for the icon */
        .icon {
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 36px; /* Adjust the font size as needed */
            width: 80px; /* Set a fixed width for the icon container */
            height: 80px; /* Set a fixed height for the icon container */
            margin-bottom: 15px; /* Optional: Add spacing between the icon and the text */
            color: #fff; /* Set the color of the icon */
            background-color: #3498db; /* Set the background color of the icon */
            border-radius: 50%; /* Optional: Add border-radius to make the icon circular */
        }

            /* Optional: Adjust the size of the icon itself */
            .icon i {
                font-size: 24px; /* Adjust the font size of the icon */
            }

        /* CSS for the text inside the card */
        .card-body {
            padding: 20px; /* Optional: Add padding to the card body */
        }

        /* CSS for the h3 element (number) */
        h3 {
            font-size: 24px; /* Adjust the font size as needed */
            margin-bottom: 10px; /* Optional: Add spacing between the number and the text */
        }

        /* CSS for the p element (description) */
        p {
            font-size: 18px; /* Adjust the font size as needed */
            color: #777; /* Optional: Set the color of the description */
        }

    </style>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="app-title">
        <ul class="app-breadcrumb breadcrumb side">
        </ul>
        <div id="clock"></div>
    </div>
    <!-- Grid & Columns -->
    <div class="container-fluid">
        <div class="row">
            <!-- Main Content -->
            <div class="col-md-8 col-lg-9 px-4">

                <!-- Stats -->
                <section class="pt-4">
                    <div class="row align-items-center">
                        <!-- Thêm class align-items-center để căn giữa dòng -->
                        <div class="col-md-4">
                            <div class="card text-center widget">
                                <div class="card-body">
                                    <h3>12</h3>
                                    <p>Tổng số người dùng</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card text-center widget">
                                <div class="card-body">
                                    <h3>12</h3>
                                    <p>Tổng số đề thi</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card text-center widget">
                                <div class="card-body">
                                    <h3>12</h3>
                                    <p>Tổng số bài làm</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>


                <!-- Sales Chart -->
                <section>
                    <h2 class="fw-bold text-primary" style="margin-top: 20px">Biểu Đồ Số Bài Làm Theo Ngày</h2>
                    <canvas id="myChartDemo"></canvas>
                </section>

                <!-- Recent Orders Table -->
                <section class="mt-5">
                    <h2 class="fw-bold text-primary">Recent Orders</h2>
                    <table class="table">
                        <!-- Table content -->
                    </table>
                </section>

            </div>

        </div>
    </div>
    <script type="text/javascript">
        // Dữ liệu mẫu (thay thế với dữ liệu thực tế từ server)
        var data = {
            labels: ['2023-11-01', '2023-11-02', '2023-11-03', '2023-11-04', '2023-11-05'],
            datasets: [{
                label: 'Số Bài Làm',
                data: [3, 5, 7, 2, 8],
                backgroundColor: 'rgba(75, 192, 192, 0.2)', // Màu nền cho biểu đồ
                borderColor: 'rgba(75, 192, 192, 1)', // Màu đường viền biểu đồ
                borderWidth: 1 // Độ đậm của đường viền biểu đồ
            }]
        };

        // Tạo biểu đồ
        var ctx = document.getElementById("myChartDemo").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: data,
            options: {
                scales: {
                    x: { type: 'time', time: { unit: 'day' } }, // Định dạng trục x là thời gian (ngày)
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
</body>
</html>
