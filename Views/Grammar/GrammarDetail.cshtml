<!DOCTYPE html>
<html lang="en">
@{
    Layout = null;
    var nguPhap = ViewData["NguPhap"] as NguPhap;
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Bearlingo</title>
    <link rel="icon" href="images/300775178_401970438737681_809766260095184123_n (1).png">
    <script src="https://kit.fontawesome.com/355da00255.js" crossorigin="anonymous"></script>

    <!-- CSS FILES -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500;600;700&family=Open+Sans&display=swap">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/templatemo-topic-listing.css" rel="stylesheet">
    <style>
        /* Thiết lập cơ bản cho trang web */
        body {
            font-family: 'Montserrat', sans-serif; /* Sử dụng font Montserrat và font thứ hai nếu Montserrat không có sẵn */
            margin: 0;
            padding: 0;
            background-color: #f4f4f4; /* Màu nền tổng thể */
        }

        /* Thiết lập cho Navbar */
        #Navbar {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        /* Phần explore-section */
        .explore-section {
            background-size: cover;
            background-position: center;
            color: #fff;
            padding: 60px 0;
        }

        /* Container chứa nội dung */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        /* Tiêu đề */
        h2 {
            font-size: 28px;
            margin-bottom: 20px;
            transition: transform 0.3s, color 0.3s; /* Hiệu ứng Scale và Màu Chữ */
        }

            /* Hiệu ứng Scale khi hover */
            h2:hover {
                transform: scale(1.1); /* Phóng to 110% */
            }

            /* Hiệu ứng thay đổi màu chữ khi hover */
            h2:hover {
                color: red; /* Màu chữ tùy chỉnh */
            }

        /* Timeline container */
        .timeline-container {
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 5px;
            padding: 20px;
        }

        /* Progress bar */
        .list-progress {
            background-color: #333;
            height: 5px;
            margin-bottom: 20px;
        }

        .inner {
            background-color: #fff;
            height: 100%;
            width: 0; /* Động theo tiến trình nếu cần */
            transition: width 1s; /* Thời gian thay đổi tiến trình */
        }

        /* Tiêu đề con */
        h4 {
            font-size: 24px;
            margin-top: 20px;
        }

        /* Nội dung con */
        div {
            font-size: 18px;
        }

        /* Bổ sung và Lưu Ý có thể được tùy chỉnh tương tự. */

        /* Thêm kiểu cho các phần tử khác cần thiết theo ý muốn. */

    </style>
    <!--

    TemplateMo 590 topic listing

    https://templatemo.com/tm-590-topic-listing

    -->
</head>

<body id="top">

    <main>
        @Html.Partial("Navbar")
        <section class="explore-section section-padding" id="section_2">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <br />
                        <br />
                        <h2 class="text-black mb-4">@nguPhap!.TieuDe</h2>
                    </div>
                    <div class="col-lg-10 col-12 mx-auto">
                        <div class="timeline-container">
                            <div class="list-progress">
                                <div class="inner"></div>
                            </div>
                            <div class="row">
                                <div>
                                    <h4>1. Cách Dùng</h4>
                                    <div>
                                        @Html.Raw(nguPhap.CachDung)
                                    </div>
                                </div>
                                <div>
                                    <h4>2. Cấu Trúc</h4>
                                    <div>
                                        @Html.Raw(nguPhap.CauTruc)
                                    </div>
                                </div>
                                <div>
                                    <h4>3. Ví Dụ</h4>
                                    <div>
                                        @Html.Raw(nguPhap.ViDu)
                                    </div>
                                </div>
                                @if (nguPhap.BoSung!.Trim().Length > 0)
                                {
                                    <div>
                                        <h4>4. Bổ Sung</h4>
                                        <div>
                                            @Html.Raw(nguPhap.BoSung)
                                        </div>
                                    </div>
                                }
                                @if (nguPhap.LuuY!.Trim().Length > 0)
                                {
                                    <div>
                                        <h4>5. Lưu Ý</h4>
                                        <div>
                                            @Html.Raw(nguPhap.LuuY)
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>


    @Html.Partial("Footer")

    <!-- JAVASCRIPT FILES -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/click-scroll.js"></script>
    <script src="~/js/custom.js"></script>

</body>
</html>
